<Window x:Class="Group_3.PaymentPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Payment Page" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Card Number:"/>
            <TextBox x:Name="CardNumberTextBox" Width="200"/>
            <Label Content="Expiration Date (MM/YY):"/>
            <TextBox x:Name="ExpirationDateTextBox" Width="100"/>
            <Label Content="CVV:"/>
            <TextBox x:Name="CvvTextBox" Width="50"/>
            <Button Content="Pay" Width="100" Click="PayButton_Click"/>
        </StackPanel>
    </Grid>
</Window>