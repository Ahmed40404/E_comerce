        <TextBlock x:Name="MessageTextBlock" FontSize="22" FontWeight="Bold" FontStyle="Italic" VerticalAlignment="Top" Margin="26,366,213,0" Height="42"/>
        <Button Click="Login_Button_Click" x:Name="Login_Button" Content="confirm" Foreground="#FF060606" HorizontalAlignment="Left" VerticalAlignment="Top" FontWeight="Bold" FontStyle="Italic" FontSize="22" Margin="233,304,0,0" Width="99" Background="WhiteSmoke"/>

    </Grid>
