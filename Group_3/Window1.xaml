        xmlns:local="clr-namespace:Group_3"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <Grid Background="#ADD9F4">

        <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Content="E.Commence" Foreground="Black" FontSize="40" FontWeight="Bold" FontStyle="Italic" Margin="256,0,0,0" />
        <Label Foreground="Black" FontSize="20"  FontStyle="Italic" Content="username" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="28,60,0,0"/>
        <TextBox x:Name="Username_TextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Black" Background="WhiteSmoke" FontSize="22" Width="167" Margin="28,104,0,0"/>
        <Image Source="/Images/local_mall_24dp_5F6368_FILL0_wght400_GRAD0_opsz24.png" Margin="709,4,-15,375" />
        <TextBox x:Name="address" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Black" Background="WhiteSmoke" FontSize="22" Width="167" Margin="233,104,0,0"/>
